<div>
    {{message}}

</div>
<div class="m-5 text-center d-flex flex-row">

    {{#each products}}

    <div class="card m-2" style="width: 18rem;">
        <img src={{image}} class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">Stock: {{stock}}</p>
            <p class="card-text">Precio: {{price}}</p>
            <p class="card-text">{{_id}}</p>
            {{!-- <a href="/products/product/{{_id}}" class="btn btn-success m-1">Ver Prodcuto</a> --}}
            <form action="/products/product/{{_id}}" method="get">
                <button type="submit" name="your_name" value="your_value" class="btn btn-success m-1"
                    style="text-decoration: none">Ver
                    Producto</button>
            </form>
            <form action="/products/delete/{{_id}}" method="post">
                <button type="submit" name="your_name" value="your_value" class="btn btn-danger m-1"
                    style="text-decoration: none">Eliminar</button>
            </form>
            <form action="/products/update/{{_id}}" method="get">
                <button type="submit" name="your_name" value="your_value" class="btn btn-success m-1"
                    style="text-decoration: none">Actualizar</button>
            </form>


        </div>
    </div>
    {{/each}}
</div>